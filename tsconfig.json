{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2015", "es2016", "dom", "es2017.object"],
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true,
    "baseUrl": "",
    "rootDir": "./src",
    "outDir": "dist/",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "stories", "vendor"]
}